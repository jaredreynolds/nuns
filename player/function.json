{
  "disabled": false,
  "bindings": [
    {
      "authLevel": "function",
      "direction": "in",
      "methods": [ "POST", "PATCH", "DELETE" ],
      "name": "req",
      "route": "player/{id?}",
      "type": "httpTrigger"
    },
    {
      "collectionName": "players",
      "connection": "DocDbConnection",
      "databaseName": "nuns",
      "direction": "in",
      "id": "{id}",
      "name": "playerDoc",
      "type": "documentDB"
    },
    {
      "collectionName": "players",
      "connection": "DocDbConnection",
      "createIfNotExists": false,
      "databaseName": "nuns",
      "direction": "out",
      "name": "newPlayerDoc",
      "type": "documentDB"
    },
    {
      "direction": "out",
      "name": "$return",
      "type": "http"
    }
  ]
}
